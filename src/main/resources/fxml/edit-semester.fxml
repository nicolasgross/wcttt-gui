<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/10.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.Semester">
   <content>
      <VBox prefWidth="450.0" spacing="5.0">
         <children>
            <GridPane vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Name" />
                  <Label text="Days per week" GridPane.rowIndex="1" />
                  <Label text="Time slots per day" GridPane.rowIndex="2" />
                  <Label text="Max daily lectures per curriculum" GridPane.rowIndex="3" />
                  <TextField fx:id="nameField" GridPane.columnIndex="1" />
                  <TextField fx:id="maxLecturesField" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <ChoiceBox fx:id="daysPerWeekBox" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ChoiceBox fx:id="timeSlotsBox" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <Accordion VBox.vgrow="ALWAYS">
              <panes>
                <TitledPane animated="false" text="Soft constraint weightings">
                     <content>
                        <GridPane vgap="5.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="ALWAYS" />
                              <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints vgrow="SOMETIMES" />
                              <RowConstraints vgrow="SOMETIMES" />
                              <RowConstraints vgrow="SOMETIMES" />
                              <RowConstraints vgrow="SOMETIMES" />
                              <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="s1" />
                              <Label text="s2" GridPane.rowIndex="1" />
                              <Label text="s3" GridPane.rowIndex="2" />
                              <Label text="s4" GridPane.rowIndex="3" />
                              <TextField fx:id="s3Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <TextField fx:id="s4Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <TextField fx:id="s1Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" />
                              <TextField fx:id="s2Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="s5" GridPane.rowIndex="4" />
                              <Label text="s6" GridPane.rowIndex="5" />
                              <Label text="s7" GridPane.rowIndex="6" />
                              <Label text="s8" GridPane.rowIndex="7" />
                              <TextField fx:id="s5Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              <TextField fx:id="s6Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                              <TextField fx:id="s7Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                              <TextField fx:id="s8Field" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                           </children>
                        </GridPane>
                     </content>
                </TitledPane>
              </panes>
            </Accordion>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" prefWidth="100.0" text="Cancel" textFill="#c90000" />
                  <Button fx:id="applyButton" mnemonicParsing="false" prefWidth="100.0" text="Apply" GridPane.columnIndex="1" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="10.0" />
               </VBox.margin>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
